# Master Database (global data)
MASTER_DATABASE_URL=postgresql://postgres:password@localhost:5432/retailstore_master

# Tenant Databases (per-tenant data)
TENANT_DB_HOST=localhost
TENANT_DB_PORT=5432
TENANT_DB_USER=postgres
TENANT_DB_PASSWORD=password
TENANT_DB_PREFIX=retailstore_tenant_

# Connection Pool
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=10

# JWT Settings
SECRET_KEY=your-secret-key-change-this-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# File Storage
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE_MB=10

# S3 Settings (Optional)
# AWS_ACCESS_KEY_ID=
# AWS_SECRET_ACCESS_KEY=
# AWS_S3_BUCKET=
# AWS_REGION=us-east-1

# Redis (Optional, for caching/sessions)
# REDIS_URL=redis://localhost:6379/0

# Environment
ENVIRONMENT=development
DEBUG=True
