generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/tenant-client"
}

datasource db {
  provider = "postgresql"
  url      = env("TENANT_DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("CASHIER")
  isActive  Boolean  @default(true)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  Sales Sale[]

  @@map("users")
}

model Product {
  id           String   @id @default(uuid())
  name         String
  sku          String   @unique
  category     String?
  description  String?
  price        Decimal  @db.Decimal(10, 2)
  costPrice    Decimal  @db.Decimal(10, 2)
  stock        Int      @default(0)
  reorderLevel Int      @default(10)
  imageUrl     String?
  barcode      String?
  isActive     Boolean  @default(true)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  SaleItems            SaleItem[]
  StockMovements       StockMovement[]
  PurchaseOrderItems   PurchaseOrderItem[]
  Batches              ProductBatch[]
  POSItemMappings      POSItemMapping[]
  VendorInvoiceItems   VendorInvoiceItem[]
  AuditCounts          AuditCount[]
  InventoryAdjustments InventoryAdjustment[]
  Promotions           Promotion[]
  Campaigns            CampaignProduct[]

  @@map("products")
}

model Sale {
  id         String   @id @default(uuid())
  saleNumber String   @unique
  subtotal   Decimal  @db.Decimal(10, 2)
  tax        Decimal  @db.Decimal(10, 2)
  discount   Decimal  @db.Decimal(10, 2)
  total      Decimal  @db.Decimal(10, 2)
  status     String   @default("COMPLETED")
  createdAt  DateTime @default(now())

  userId String
  user   User   @relation(fields: [userId], references: [id])

  customerId String?
  customer   Customer? @relation(fields: [customerId], references: [id])

  items   SaleItem[]
  Invoice Invoice?

  @@map("sales")
}

model SaleItem {
  id        String  @id @default(uuid())
  saleId    String
  productId String
  quantity  Int
  unitPrice Decimal @db.Decimal(10, 2)
  subtotal  Decimal @db.Decimal(10, 2)

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("sale_items")
}

model Customer {
  id            String   @id @default(uuid())
  name          String
  email         String?  @unique
  phone         String?  @unique
  loyaltyPoints Int      @default(0)
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  Sales Sale[]

  @@map("customers")
}

model Vendor {
  id            String  @id @default(uuid())
  name          String
  contactPerson String?
  email         String?
  phone         String?
  address       String?
  isActive      Boolean @default(true)

  PurchaseOrders PurchaseOrder[]
  VendorInvoices VendorInvoice[]

  @@map("vendors")
}

model PurchaseOrderItem {
  id              String  @id @default(uuid())
  purchaseOrderId String
  productId       String
  quantity        Int
  unitCost        Decimal @db.Decimal(10, 2)
  totalCost       Decimal @db.Decimal(10, 2)

  purchaseOrder PurchaseOrder @relation(fields: [purchaseOrderId], references: [id])
  product       Product       @relation(fields: [productId], references: [id])

  @@map("purchase_order_items")
}

model StockMovement {
  id          String   @id @default(uuid())
  productId   String
  type        String // IN (Restock), OUT (Sale), ADJUSTMENT (Reconciliation)
  quantity    Int
  description String?
  createdAt   DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  reconciliationId String?
  reconciliation   Reconciliation? @relation(fields: [reconciliationId], references: [id])

  @@map("stock_movements")
}

model Invoice {
  id            String   @id @default(uuid())
  invoiceNumber String   @unique
  saleId        String   @unique
  pdfUrl        String?
  createdAt     DateTime @default(now())

  sale Sale @relation(fields: [saleId], references: [id])

  @@map("invoices")
}

model Campaign {
  id        String    @id @default(uuid())
  name      String
  type      String // EMAIL, SMS, SOCIAL
  status    String    @default("DRAFT")
  startDate DateTime?
  endDate   DateTime?
  budget    Decimal?  @db.Decimal(10, 2)
  createdAt DateTime  @default(now())

  Products CampaignProduct[]

  @@map("campaigns")
}

model Promotion {
  id            String   @id @default(uuid())
  productId     String
  batchId       String?
  title         String
  discountType  String // percentage, fixed_price
  discountValue Decimal  @db.Decimal(10, 2)
  startDate     DateTime @default(now())
  endDate       DateTime
  createdAt     DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  @@map("promotions")
}

model CampaignProduct {
  id             String   @id @default(uuid())
  campaignId     String
  productId      String
  highlightLabel String?
  createdAt      DateTime @default(now())

  campaign Campaign @relation(fields: [campaignId], references: [id])
  product  Product  @relation(fields: [productId], references: [id])

  @@unique([campaignId, productId])
  @@map("campaign_products")
}

model SocialAccount {
  id          String  @id @default(uuid())
  platform    String // FACEBOOK, INSTAGRAM, TWITTER
  accountId   String
  accessToken String?
  isConnected Boolean @default(true)

  @@map("social_accounts")
}

model Reconciliation {
  id     String   @id @default(uuid())
  date   DateTime @default(now())
  status String   @default("COMPLETED")
  notes  String?

  adjustments StockMovement[]

  @@map("reconciliations")
}

model Settings {
  id    String @id @default(uuid())
  key   String @unique // e.g., 'tax_rate', 'currency', 'store_logo'
  value String

  @@map("settings")
}

model POSItemMapping {
  id                 String   @id @default(uuid())
  posItemName        String
  matchedInventoryId String
  lastSoldPrice      Decimal  @db.Decimal(10, 2)
  confidenceScore    Decimal? @db.Decimal(5, 2)
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt

  tenantId String // Added for scoping if needed, though schema is per-tenant.
  // Actually schema is tenant-specific, so no tenantId needed inside the table unless for multi-tenancy in single DB.
  // But wait, the Frontend sends `tenantId`.
  // If we are in Tenant DB, we don't need tenantId column?
  // Frontend sends it to ROUTER. Router picks DB.
  // So NO tenantId column needed here.

  product Product @relation(fields: [matchedInventoryId], references: [id])

  @@unique([posItemName])
  @@map("pos_item_mappings")
}

model ProductBatch {
  id           String   @id @default(uuid())
  productId    String
  sku          String
  quantity     Int
  expiryDate   DateTime
  receivedDate DateTime @default(now())

  product Product @relation(fields: [productId], references: [id])

  @@map("product_batches")
}

// ===== NEW MODELS FOR CORE FEATURES =====

// Invoice Management (Inventory In)
model VendorInvoice {
  id            String   @id @default(uuid())
  vendorId      String
  invoiceNumber String
  invoiceDate   DateTime
  totalAmount   Decimal  @db.Decimal(10, 2)
  fileUrl       String?
  status        String   @default("pending") // pending, validated, committed
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  vendor Vendor              @relation(fields: [vendorId], references: [id])
  items  VendorInvoiceItem[]

  @@map("vendor_invoices")
}

model VendorInvoiceItem {
  id         String    @id @default(uuid())
  invoiceId  String
  productId  String
  quantity   Int
  unitCost   Decimal   @db.Decimal(10, 2)
  totalCost  Decimal   @db.Decimal(10, 2)
  expiryDate DateTime?

  invoice VendorInvoice @relation(fields: [invoiceId], references: [id], onDelete: Cascade)
  product Product       @relation(fields: [productId], references: [id])

  @@map("vendor_invoice_items")
}

// Inventory Audit (Shelf Check)
model AuditSession {
  id          String    @id @default(uuid())
  userId      String
  startedAt   DateTime  @default(now())
  completedAt DateTime?
  status      String    @default("in-progress") // in-progress, completed
  notes       String?

  counts      AuditCount[]
  adjustments InventoryAdjustment[]

  @@map("audit_sessions")
}

model AuditCount {
  id              String   @id @default(uuid())
  auditSessionId  String
  productId       String
  systemQuantity  Int
  countedQuantity Int
  variance        Int
  varianceReason  String? // theft, damage, expired, shrinkage, other
  createdAt       DateTime @default(now())

  auditSession AuditSession @relation(fields: [auditSessionId], references: [id], onDelete: Cascade)
  product      Product      @relation(fields: [productId], references: [id])

  @@map("audit_counts")
}

model InventoryAdjustment {
  id             String   @id @default(uuid())
  auditSessionId String?
  productId      String
  quantityChange Int
  reason         String
  notes          String?
  createdAt      DateTime @default(now())

  auditSession AuditSession? @relation(fields: [auditSessionId], references: [id])
  product      Product       @relation(fields: [productId], references: [id])

  @@map("inventory_adjustments")
}

// Purchase Order (Restock) - already had PurchaseOrderItem, adding main model
model PurchaseOrder {
  id          String    @id @default(uuid())
  vendorId    String
  orderNumber String    @unique
  orderDate   DateTime  @default(now())
  status      String    @default("draft") // draft, sent, confirmed, received, cancelled
  totalAmount Decimal   @db.Decimal(10, 2)
  notes       String?
  sentAt      DateTime?
  receivedAt  DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  vendor Vendor              @relation(fields: [vendorId], references: [id])
  items  PurchaseOrderItem[]

  @@map("purchase_orders")
}

// Profit & Loss Reporting (Bottom Line)
model ProfitReport {
  id          String   @id @default(uuid())
  period      String // daily, weekly, monthly
  startDate   DateTime
  endDate     DateTime
  revenue     Decimal  @db.Decimal(12, 2)
  cogs        Decimal  @db.Decimal(12, 2)
  grossProfit Decimal  @db.Decimal(12, 2)
  grossMargin Decimal  @db.Decimal(5, 2) // percentage
  expenses    Decimal  @db.Decimal(12, 2)
  netProfit   Decimal  @db.Decimal(12, 2)
  metadata    Json? // additional data (category breakdowns, etc)
  createdAt   DateTime @default(now())

  @@map("profit_reports")
}

// Operating Expenses
model Expense {
  id          String   @id @default(uuid())
  category    String // rent, salaries, utilities, marketing, other
  amount      Decimal  @db.Decimal(10, 2)
  description String?
  expenseDate DateTime
  createdAt   DateTime @default(now())

  @@map("expenses")
}

// Z-Report tracking (Inventory Out)
model ZReport {
  id           String    @id @default(uuid())
  reportDate   DateTime
  reportNumber String    @unique
  totalSales   Decimal   @db.Decimal(10, 2)
  totalTax     Decimal   @db.Decimal(10, 2)
  fileUrl      String?
  status       String    @default("pending") // pending, processed
  processedAt  DateTime?
  createdAt    DateTime  @default(now())

  @@map("z_reports")
}
